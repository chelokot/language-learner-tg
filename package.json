{
  "name": "ts-tg-bot",
  "version": "1.0.0",
  "description": "Telegram bot template in TypeScript ",
  "main": "build/index.js",
  "scripts": {
    "compile": "tsc",
    "postcompile": "mkdir -p build/src && cp -r src/locales build/src && mkdir -p api && cp build/api/* api/",
    "postdeploy": "node build/src/scripts/postdeploy.js",
    "build": "npm run compile && npm run postdeploy",
    "start": "npm run compile && node .",
    "lint": "npx biome check src/ --write",
    "format": "npx biome format src/ --write",
    "test": "tsc --noEmit && vitest run --coverage",
    "test:unit": "vitest run --coverage --exclude \"test/e2e/**\"",
    "test:e2e": "vitest run test/e2e --coverage",
    "mutation": "stryker run",
    "migrate": "graphile-migrate migrate",
    "migration:commit": "graphile-migrate commit",
    "test:migrations": "vitest run test/migrations.spec.ts"
  },
  "keywords": [
    "telegram",
    "bot",
    "grammy",
    "mongodb",
    "typescript"
  ],
  "author": "ExposedCat",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "@grammyjs/conversations": "^2.1.0",
    "@grammyjs/i18n": "^0.5.1",
    "@grammyjs/menu": "^1.3.1",
    "@vercel/postgres": "^0.10.0",
    "@neondatabase/serverless": "^0.10.4",
    "dotenv": "^16.0.1",
    "grammy": "^1.24.1",
    "mongodb": "^4.9.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@stryker-mutator/core": "^9.0.1",
    "@stryker-mutator/typescript-checker": "^9.0.1",
    "@stryker-mutator/vitest-runner": "^9.0.1",
    "@stylistic/eslint-plugin": "^2.3.0",
    "@tsconfig/recommended": "^1.0.7",
    "@types/node": "^24.1.0",
    "@types/pdfkit": "^0.17.2",
    "@types/pg": "^8.11.2",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-functional": "^6.6.1",
    "eslint-plugin-github": "^5.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-sonarjs": "^1.0.3",
    "pdfkit": "^0.17.1",
    "prettier": "^3.3.2",
    "prettier-eslint": "^16.3.0",
    "telegram-test-api": "^4.2.1",
    "typescript": "^5.5.3",
    "vitest": "^3.2.4",
    "graphile-migrate": "^1.4.1",
    "pg-mem": "^3.0.0"
  },
  "type": "module",
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  }
}
